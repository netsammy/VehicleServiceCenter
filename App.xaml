<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="VehicleServiceCenter.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VehicleServiceCenter"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:utils="clr-namespace:VehicleServiceCenter.Utilities">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>              
            <!--  Converters  -->
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <utils:InverseBoolConverter x:Key="InverseBoolConverter" />
            <utils:StringEmptyConverter x:Key="StringEmptyConverter" />
            <utils:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
